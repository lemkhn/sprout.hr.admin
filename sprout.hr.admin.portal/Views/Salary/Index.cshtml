@model sprout.hr.admin.portal.Models.EmployeeViewModel

@{
    string salaryType = Model.TypeOfEmployee == "Regular" ? "Monthly Salary" : "Daily Rate";
}

<div class="form-container col-md-12">
    <div class="jumbotron">
        <header class="header">
            <div class="flex-container">
                <h4>Calculate Salary</h4>
            </div>
        </header>
        <br />
        <div class="row col-md-12">
            <form class="col-md-6">
                <div class="form-row">
                    <div class="grid-container">
                        <div class="form-group">
                            <label for="txtEmployeeName">Name</label>
                            <input required type="text" class="form-control form-control-sm" id="txtEmployeeName" disabled />
                        </div>
                        <div class="form-group">
                            <label for="txtEmployeeType">Employee Type</label>
                            <input required type="text" class="form-control form-control-sm" id="txtEmployeeType" disabled />
                        </div>
                        <div class="form-group">
                            <label for="txtEmployeeRate">@salaryType</label>
                            <input required type="text" class="form-control form-control-sm" id="txtEmployeeRate" disabled />
                        </div>
                        @{
                            if (Model.TypeOfEmployee == "Regular")
                            {
                                <div class="form-group">
                                    <label for="txtDays">Number of Absences <small>(2 decimal Places Only)</small></label>
                                    <input required type="text" class="form-control form-control-sm decimal" data-decimal="2" id="txtDays" value="0.00"/>
                                </div>
                                <hr />
                                <div class="mt-3">
                                    <button id="btnCalculateSalary" type="button" class="btn btn-primary mb-2"> Calculate Salary</button>
                                </div>
                            }
                            else if (Model.TypeOfEmployee == "Contractual")
                            {
                                <div class="form-group">
                                    <label for="txtDays">Workdays <small>(2 decimal Places Only)</small></label>
                                    <input required type="text" class="form-control form-control-sm decimal" data-decimal="2" id="txtDays"  value="0.00"/>
                                </div>
                                <hr />
                                <div class="mt-3">
                                    <button id="btnCalculateSalary" type="button" class="btn btn-primary mb-2"> Calculate Salary</button>
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <label>*Has no matching employee Employee Type in the system</label>
                                </div>
                            }
                        }
                    </div>
                </div>
            </form>
            <section class="col-md-6">
                <div class="form-group calculated-salary">
                    <label for="txtCalculatedSalary">Salary</label>
                    <input class="form-control form-control-sm" id="txtCalculatedSalary" disabled placeholder="0.00" />
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/salary/index.js"></script>
}