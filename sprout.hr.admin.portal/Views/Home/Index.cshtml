<div class="form-container col-md-12">
    <div class="jumbotron">
        <header class="header">
            <div class="flex-container">
                <h4>Employees</h4>
                <button id="btnPageToggle" type="button" class="next-page-toggle ml-2 btn btn-primary btn-sm" data-button-id="#btnPageToggle" data-on="New Employee" data-off="View Employees">
                    New Employee
                </button>
            </div>
        </header>
        <br />
        <div class="inner-forms">
            <div class="wrapper row">
                <section class="forms">
                    <table id="tblEmployee" style="width: 100%;" class="table table-hover" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Birth Date</th>
                                <th>TIN</th>
                                <th>Salary</th>
                                <th>Employee Type</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </section>
                <form class="forms">
                    <div class="form-row">
                        <div class="grid-container">
                            <div class="form-group">
                                <label for="txtEmployeeName">Full Name</label>
                                <input required type="text" class="form-control form-control-sm" id="txtEmployeeName" />
                            </div>
                            <div class="form-group">
                                <label for="txtBirthDate">Date of Birth</label>
                                <input required type="date" class="form-control form-control-sm" id="txtBirthDate" />
                            </div>
                            <div class="form-group">
                                <label for="txtTINNumber">TIN Number</label>
                                <input required type="text" class="form-control form-control-sm" id="txtTINNumber" />
                            </div>
                            <div class="form-group">
                                <label for="txtEmployeeType">Employment Status</label>
                                <select class="form-control form-control-sm" id="txtEmployeeType" required>
                                    <option value="Regular">Regular</option>
                                    <option value="Contractual">Contractual</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="txtEmployeeSalary">Salary</label>
                                <input required type="text" class="form-control form-control-sm" id="txtEmployeeSalary" />
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="mt-3">
                        <button id="btnClearForm" type="reset" class="btn btn-dark mr-2 mb-2">Clear</button>
                        <button id="btnSubmitEmployee" btn-process="add" type="button" class="btn btn-primary mb-2"> Add Employee</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/home/index.js"></script>
}